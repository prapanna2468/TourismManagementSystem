<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.RegisterController" style="-fx-background-color: linear-gradient(to bottom, #2E8B57, #228B22);">
   <children>
      <!-- Main Content Container -->
      <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background: transparent; -fx-background-color: transparent;" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
         <content>
            <VBox alignment="CENTER" spacing="20.0" style="-fx-min-height: 1080;">
               <padding>
                  <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
               </padding>
               <children>
                  <!-- Registration Form -->
                  <VBox alignment="CENTER" maxWidth="800.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 15, 0, 0, 8);">
                     <padding>
                        <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
                     </padding>
                     <children>
                        <Label text="Create New Account - Journey" textAlignment="CENTER" textFill="#2E8B57">
                           <font>
                              <Font name="System Bold" size="28.0" />
                           </font>
                           <VBox.margin>
                              <Insets bottom="30.0" />
                           </VBox.margin>
                        </Label>
                        
                        <VBox spacing="25.0" maxWidth="700.0">
                           <children>
                              <!-- Basic Information Section -->
                              <VBox spacing="20.0" style="-fx-background-color: #F0F8FF; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #4682B4; -fx-border-width: 2; -fx-border-radius: 15;">
                                 <children>
                                    <Label text="📋 Basic Information" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #2F4F4F;" />
                                    
                                    <HBox spacing="20.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label text="Username *" style="-fx-font-weight: bold; -fx-text-fill: #2F4F4F;" />
                                                <TextField fx:id="usernameField" promptText="Enter unique username" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label text="Password *" style="-fx-font-weight: bold; -fx-text-fill: #2F4F4F;" />
                                                <PasswordField fx:id="passwordField" promptText="Enter secure password" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                    
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Full Name *" style="-fx-font-weight: bold; -fx-text-fill: #2F4F4F;" />
                                          <TextField fx:id="fullNameField" promptText="Enter your complete name" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                       </children>
                                    </VBox>
                                    
                                    <HBox spacing="20.0">
                                       <children>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label text="Email Address *" style="-fx-font-weight: bold; -fx-text-fill: #2F4F4F;" />
                                                <TextField fx:id="emailField" promptText="your.email@example.com" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                             </children>
                                          </VBox>
                                          <VBox spacing="8.0" HBox.hgrow="ALWAYS">
                                             <children>
                                                <Label text="Phone Number *" style="-fx-font-weight: bold; -fx-text-fill: #2F4F4F;" />
                                                <TextField fx:id="phoneField" promptText="+977-XXXXXXXXX" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              
                              <!-- Role Selection Section -->
                              <VBox spacing="20.0" style="-fx-background-color: #FFF8DC; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #DAA520; -fx-border-width: 2; -fx-border-radius: 15;">
                                 <children>
                                    <Label text="👤 Account Type" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #8B4513;" />
                                    
                                    <VBox spacing="8.0">
                                       <children>
                                          <Label text="Select Your Role *" style="-fx-font-weight: bold; -fx-text-fill: #8B4513;" />
                                          <ComboBox fx:id="roleComboBox" prefWidth="300.0" promptText="Choose your account type" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                          <Label text="Choose 'Tourist' if you want to book treks, or 'Guide' if you want to offer guiding services" style="-fx-font-size: 12px; -fx-text-fill: #8B4513; -fx-font-style: italic;" />
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              
                              <!-- Role-Specific Information Section -->
                              <VBox fx:id="roleSpecificSection" spacing="20.0" style="-fx-background-color: #F0FFF0; -fx-padding: 25; -fx-background-radius: 15; -fx-border-color: #32CD32; -fx-border-width: 2; -fx-border-radius: 15;" visible="false" managed="false">
                                 <children>
                                    <Label fx:id="roleSpecificLabel" text="📝 Additional Information" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #006400;" />
                                    
                                    <!-- Tourist Fields -->
                                    <VBox fx:id="touristFields" spacing="15.0" visible="false" managed="false">
                                       <children>
                                          <VBox spacing="8.0">
                                             <children>
                                                <Label fx:id="nationalityLabel" text="🌍 Nationality *" style="-fx-font-weight: bold; -fx-text-fill: #006400;" />
                                                <TextField fx:id="nationalityField" promptText="e.g., Nepali, Indian, American, etc." style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                                <Label text="Enter your country of citizenship" style="-fx-font-size: 12px; -fx-text-fill: #006400; -fx-font-style: italic;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                    
                                    <!-- Guide Fields -->
                                    <VBox fx:id="guideFields" spacing="15.0" visible="false" managed="false">
                                       <children>
                                          <VBox spacing="8.0">
                                             <children>
                                                <Label fx:id="languagesLabel" text="🗣️ Languages Spoken *" style="-fx-font-weight: bold; -fx-text-fill: #006400;" />
                                                <TextField fx:id="languagesField" promptText="English, Nepali, Hindi, Mandarin" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                                <Label text="List all languages you can speak fluently (separate with commas)" style="-fx-font-size: 12px; -fx-text-fill: #006400; -fx-font-style: italic;" />
                                             </children>
                                          </VBox>
                                          
                                          <VBox spacing="8.0">
                                             <children>
                                                <Label fx:id="experienceLabel" text="⭐ Years of Guiding Experience *" style="-fx-font-weight: bold; -fx-text-fill: #006400;" />
                                                <TextField fx:id="experienceField" promptText="Enter number of years (0-50)" style="-fx-pref-height: 40; -fx-font-size: 14px; -fx-background-radius: 8;" />
                                                <Label text="How many years have you been working as a tour guide?" style="-fx-font-size: 12px; -fx-text-fill: #006400; -fx-font-style: italic;" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                        
                        <!-- Action Buttons -->
                        <HBox alignment="CENTER" spacing="25.0">
                           <VBox.margin>
                              <Insets top="30.0" />
                           </VBox.margin>
                           <children>
                              <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="160.0" style="-fx-background-color: #32CD32; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 50; -fx-font-size: 16px; -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Create Account" />
                              <Button fx:id="backButton" onAction="#handleBack" prefWidth="160.0" style="-fx-background-color: #708090; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-height: 50; -fx-font-size: 16px; -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 2);" text="Back to Login" />
                           </children>
                        </HBox>
                        
                        <VBox alignment="CENTER" spacing="5.0">
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                           <children>
                              <Label text="* Required fields" style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-style: italic;" />
                              <Label text="All information will be kept secure and confidential" style="-fx-font-size: 11px; -fx-text-fill: #888; -fx-font-style: italic;" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </content>
      </ScrollPane>
   </children>
</StackPane>
